.quickview
    .product__right--colunm
        &:before
            display: none
    .wrapper
        padding: 28px 7px
    .product__right--colunm
        padding: 0
        .wrapper
            padding: 0
    .qtds
        width: 72px
    a.buy-button.buy-button-ref
        width: 199px
    .product__buy-qtds
        width: 280px
    .portal-notify-me-ref
        display: none
    .product__page
        padding-top: 39px
        a
            display: block
            max-width: 180px
            font-size: 13px
            color: #FFFFFF
            font-weight: bold
            border: 1px solid transparent
            background-color: color[0]
            line-height: 39px
            text-align: center
            border-radius: 7px
            text-decoration: none
            transition: all .3s
            &:hover
                background: #ffffff
                border-color: color[0]
                color: color[0]
