.copyright
    background          : #fff
    font-size           : 11px
    font-weight         : regular
    line-height         : 1.2
    color               : #A8A8A8

    &__container
        { container }
        display: flex
        align-items: center
        justify-content: space-between
        padding-bottom: 27px
        margin-bottom : 27px
        border-bottom: 1px solid #EDEDED
        @media(max-width : 991px)
            flex-wrap: wrap
        @media(max-width : 475px)
            justify-content: center
    
    &__safe
        display: flex
        align-items: center
        justify-content: space-between
        @media(max-width : 991px)
            padding-top: 15px
            justify-content: center
            flex: 1 1 100%
            width: 100%
    &__text
        max-width: 100%
        width: 100%
        text-align: center
        
        @media(max-width : 991px)
            flex: 1 1 100%
            max-width: 100%
            text-align: center
    &__safe
        @media(max-width : 475px)
            flex: 1 1 100%

    &__title
        font-size: 12px
        color: #838383
        line-height: 14px
        padding-bottom: 5px

    &__sub
        font-size: 10px
        color: #838383
        line-height: 14px

    ul
        display: flex
        align-items: center
        justify-content: flex-end

        @media(max-width: 991px)
            justify-content: center

        li
            flex: 0 0 20%
            margin: 0 5px

            @media(max-width: 425px)
                flex: 0 0 33%