.instagram
    margin-top: 50px
    border-top: 1px solid #ffe6ab
    &:hover 
        position: relative 
        z-index: 20
    &__title 
        font-size: 40px
        font-weight: light
        color: #434343
    &__link 
        font-size: 14px
        font-weight: regular 
        color: #434343
        &:before 
            content: ''
            display: inline-block 
            width: 16px
            height: 16px 
            background-image: svg-load('./svg/instagram.svg')
            background-size: 100% 100%
            vertical-align: middle 
            margin-right: 5px
    &__header 
        padding: 20px 0
    &__main 
        margin: -10px
        a 
            display: block 
            padding: 10px

    .slick 
        &-next, &-prev
            top: 50% 
            z-index: 10
            transform: translateY(-50%)

@media (min-width: 768px)
    .instagram 
        &__header 
            display: flex 
            justify-content: space-between
            align-items: flex-end
        
@media (min-width: (viewport + 90))
    .slick 
        &-next 
            right: -15px 
        &-prev 
            left: -15px
            