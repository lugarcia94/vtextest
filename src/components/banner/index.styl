.minibanner
    text-align: center
    padding-top: 30px
    @media(max-width : 991px)
        padding-top: 0
        .slick-dots
            margin: 0 auto
            margin-top: 38px
    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
        display: flex
        align-items: center
        justify-content: space-between 
        padding-bottom: 30px
    .box-banner
        overflow hidden
        min-width: 141px
    img
        display block
        margin: 0 auto
        transition: all .3s
        &:hover
            transform: scale(1.05)
    .box-banner
        padding: 0 5px
.minibanner-mid
    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
        display: flex
        align-items: center
        justify-content: center
        @media(max-width : 767px)
            flex-wrap: wrap
    .box-banner
        padding: 5px
        overflow hidden
    img
        margin-left: auto
        transition: all .3s
        &:hover
            transform: scale(1.05)

.minibanner-down
    padding-bottom: 60px
    padding-top: 20px
    @media(max-width : 991px)
        padding: 38px 0
    &__container
        max-width: 1320px
        width: 100%
        padding: 0 15px
        margin: 0 auto
        overflow hidden
        
    img
        transition: all .3s
        &:hover
            transform: scale(1.05)

.banner--full
    .slick-arrow
        background: none

    .banner__container 
        display: flex 
        overflow: hidden
    
    .box-banner 
        flex: 0 0 100% 

    &-mobile 
        display: block

    @media(max-width : 991px)
        img
            display: block
            position: relative
            width: auto
            min-width: 100%
            max-width: 220%
            left: 50%
            transform: translateX(-50%)
        .box-banner
            overflow hidden
            padding-bottom: 40px

        .slick-dots
            position: absolute
            bottom: 20px 
            left: 50%
            transform: translateX(-50%)

    @media (min-width: 992px) 
        display: block 

        &-mobile 
            display: none 




.banner--category
    margin: 10px 0 30px

    .slick-slide
        padding: 0!important
        
    .slick-arrow
        top: 50%
        transform: translateY(-50%)
        z-index 99
        background: transparent!important
        border-radius: 50%

    .slick-prev
        left 30px!important

    .slick-next
        right 30px!important

.banner--full-mobile 
    padding-bottom: 0
    .box-banner
        padding-bottom: 0