.news-rulers
    margin-top: 20px

    .news-rulers__item.news
        width               : 100%
        { container }
        min-height          : 72px
        display             : flex
        align-items         : center
        @media(max-width: 768px)
            padding: 0
    .success
        font-size: 14px
        font-weight: regular
        color: #fff 

.newsletter
    width                   : 100%
    text-align              : center
    font-size               : 0
    display                 : flex
    justify-content         : space-between
    padding                 : 20px 25px
    flex-wrap               : wrap
    background-color        : color[0]
    border-radius           : 7px
    
    @media(max-width: 768px)
        border-radius       : 0
        padding             : 30px 15px

    label
        font-size           : 12px

    #newsletterClientEmail, #newsletterClientName
        width               : 100%
        height              : 50px
        padding-left        : 10px
        max-width           : 300px
        border-radius       : 7px
        border              : none
        margin-right        : 20px
        background-color    : #ffffff
        font-size           : 18px
        font-weight         : 300
        font-style          : italic
        letter-spacing      : 0.2px
        color               : #777777
        &:placeholder
            color: #777777

        @media(max-width: 845px)
            max-width       : 255px

        @media(max-width: 768px)
            width 100%
            max-width 100%
            margin-bottom: 18px
            margin-right: 0 

    #newsletterButtonOK
        width               : 126px
        height              : 50px
        border-radius       : 7px
        background-color    : color[2]
        border              : none 
        font-size           : 13px
        font-weight         : 700
        font-style          : normal
        letter-spacing      : 0.2px
        color               : #fff
        appearance          : none
        cursor              : pointer
        vertical-align      : bottom
        transition          : all 150ms ease-in-out

        &:hover
            opacity: 0.8

        @media(max-width: 768px)
            width 100%

    &-title
        font-size           : 14px
        font-weight         : regular

    fieldset

        > p
            margin-bottom   : 10px
            font-size       : 0
            font-weight     : regular
            color           : color[0]

.news-rulers
    .newsletter
        &-title
            font-size           : 0
            display             : flex
            align-items         : center

            @media(max-width: 1170px)
                flex: 0 0 100%
                justify-content: center
                margin-top 15px

            &:after
                content         : 'receba novidades'
                font-size       : 29px
                line-height     : 34px 
                font-weight     : 300
                letter-spacing  : 0.3px
                color           : #ffffff

            &:before
                font-icon       : url('./svg/mail.svg')
                font-size       : 21px
                margin-right    : 5px
                color           : #fff

 
.news-rulers
    display             : flex
    align-items         : center
    padding-top         : 20px
.newsletter
    position            : relative

    &-title
        display         : inline-block

    fieldset
        display         : inline-block
        width           : calc(100% - 270px)

        @media(max-width: 1170px)
            margin: 20px 0!important
            width 100%!important

        > p
            position    : absolute
            bottom      : 0
            left        : 0
            width       : 240px

.minibanner__container
    .slick-list
        width 100%!important

section.ruler 
    margin: 30px 0
