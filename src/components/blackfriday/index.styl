body#blackfriday-page
    overflow-x: hidden
    .wrapper
        padding-top: 0;

    >.box-banner,
    .products_row,
    .banner_row
        margin-bottom: 110px

.blackfriday_header
    position: absolute
    top: 0
    left: 0
    right: 0
    .header__container
        background: none;
    .wrapper
        background: none
        display: flex
        align-items: center
        justify-content: space-between
        width: 100%;
    .blk_menu
        display: flex
        align-items: center
        font-size: 15px
        color: #fff
        strong
            margin: 0 15px 0 0
        ul
            display: flex
            align-items: center
            li
                padding: 0 15px
            a
                color: #FFC928

.products_row
    display: flex
    justify-content: space-between
    align-items: flex-start
    margin: 0 -20px
    @media(max-width: 768px)
        flex-wrap: wrap
        margin-bottom: 0!important
        margin: 0!important
    >*
        padding: 0 20px
    .bkf_minibanner
        flex: 0 0 36.8%
        @media(max-width: 768px)
            flex: 0 0 100%
            margin-bottom: 110px
            img
                display: block
                margin: 0 auto
    .products_showcase 
        max-width 100%
        width: 63.2%
        @media(max-width: 768px)
            flex: 0 0 100%
            margin-bottom: 110px
        >*
            >h2
                display: none
        // ul
            
        //     >li
        //         flex: 0 0 33.333333%

        .review,
        .showcase__short-description,
        .showcase__quickview,
        .buy-button__qtd
            display: none

        .showcase__actions
            opacity: 1
            visibility: visible

        .showcase__buy
            margin: 0

        .buy-button__button
            width: 100%
            height 40px
            background: #FFC928
            font-size: 13px
            text-transform: uppercase
            color: #453F3F
            border: none 
            border-radius: 4px

        .slick-arrow
            top: 50%
            margin-top: -25px
            z-index 1000
            &.slick-prev
                left 0
            &.slick-next
                right 0

        

        