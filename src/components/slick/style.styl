.slick-track
    min-width               : 100%
.slick
    &-arrow
        width               : 50px
        height              : 50px
        border              : 0
        border-radius       : 3px
        cursor              : pointer      
        font-size           : 0
        position            : absolute
        background          : transparent
        color               : color[0]

        &:before
            font-size       : 21px

    &-prev
        left                    : 15px
        z-index 99
        &:before
            content:  ''
            background-image: url('data:image/png;base64,')
            height 40px
            width 40px
            display: block
            background-repeat: no-repeat
            background-size: 60%
            background-color: #fff
            background-position: center 
            border: 1px solid

    &-next
        right                   : 15px
        &:before
            content:  ''
            background-image: url('data:image/png;base64,')
            height 40px
            width 40px
            display: block
            background-repeat: no-repeat
            transform: scale(-1)
            background-size: 60%
            background-color: #fff
            background-position: center 
            border: 1px solid
            
    &-dots
        display             : block
        margin-bottom       : 50px
        font-size           : 0

        text-align          : center

        li
            display         : inline-block

        button
            width           : 10px
            height          : 10px
            padding         : 0
            border          : 0
            border-radius   : 50%
            font-size       : 0
            background      : #E9E9E9
            margin          : 0 6px

        .slick-active
            button
                width       : 15px
                height      : 15px
                background  : color[0]
    &-vertical
        .slick
            &-arrow 
                position    : static 
                width       : 100%
            &-prev 
                transform   : rotate(90deg)
            &-next 
                transform   : rotate(90deg)
                
.slick-vertical
    .slick-track, .slick-list 
        min-height          : 100%

[data-carousel]
    position                : relative

    .slick
        &-arrow
            position        : absolute
            top             : 50%
            z-index         : 50
            transform       : translateY(-50%)
            transition      : transition[0]
            background-color: transparent
            padding         : 0 

        &-prev
            left            : 0

        &-next
            right           : 0

[data-carousel=three]
    .slick
        &-prev
            left            : 0

        &-next
            right           : 0

[data-carousel=one]
    .slick-dots
        position            : relative
        z-index             : 10
        margin              : 0

@media (max-width: 991px)
    [data-carousel] > div > ul > .slick-arrow
        margin-top          : -60px 

@media (min-width: (viewport + 90)) 
    [data-carousel] > div > ul > .slick 
        &-prev 
            left            : -25px
        &-next 
            right           : -25px

.thumbs
    .slick-arrow
        &:before
            width 38px
            height 38px
            background-size: contain