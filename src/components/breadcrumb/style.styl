.breadcrumb
    { container }
    display: flex
    align-items: center
    justify-content: space-between
    margin-top 5px
    margin-bottom 20px

    a 
        font-size               : 12px 
        font-weight             : 400
        color                   : #453F3F
    ul 
        display                 : flex 
        justify-content         : flex-start 
        align-items             : center 
        margin                  : 10px -2px 
    li 
        padding                 : 2px 

        &:first-child
            &:before
                content: 'VocÃª estÃ¡ em:'
                font-size: 12px
                color: #8B8A8A
                font-weight: 400
                margin-right: 5px

        &:not(:last-child):after 
            content             : '/'
            font-size           : 10px 
            color               : #453F3F
            display             : inline-block 
            margin              : 0 0 0 5px
        &:first-child 
            a 
                font-size       : 12px
        &.last 
            a 
                color           : color[0]

