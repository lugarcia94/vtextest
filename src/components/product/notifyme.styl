.notifyme
    font-size           : 13px
    font-weight         : regular 

    color               : #434343

    &-title 
        font-weight     : bold

    form 
        margin          : -5px -15px

    p 
        padding         : 15px 

    input 
        border          : solid 1px rgba(0,0,0,.1)
        height          : 40px 
        padding         : 0 15px
        width           : calc(100% - 30px)
        margin          : 5px 15px

        font-size       : 14px
        font-weight     : bold 
        text-transform  : uppercase  

        &[type=button]
            cursor: pointer

            &:hover 
                background: rgba(color[0], .9)
                color: #fff