.zoomPad
    position            : relative

.zoomWindow
    top                 : 0 !important
    left                : 0 !important 
    width               : 100% 
    height              : 100% 
    overflow            : hidden
    background          : #fff
    img 
        max-width       : none 

.zoomPup
    z-index             : 5010
    background          : rgba(255,255,255,.5)
    cursor              : zoom-in
    border-radius       : 50%

.zoomPreload
    background: #000 
    &:content
        content: 'loading'