.showcase
    { container }
    @media(max-width: 991px)
        padding-bottom: 38px
    h2
        visibility          : hidden

        &.showcase__title--actived
            visibility      : visible

    &__main
        text-align: left
    
    .slick-slide
        padding: 5px

    &__review
        display: flex
        justify-content: flex-start
        margin: 5px 0

    &__title
        margin-bottom       : 20px
        letter-spacing      : 0.6px
        color               : #434343
        font-weight         : 200
        text-align          : left
        font-size           : 35px
        
        @media(max-width : 767px)
            font-size: 29px
            line-height: 36px
            text-align: center

        strong
            display         : block
            font-size       : 24px
            font-weight     : light
            color           : color[1]

    &__item
        position            : relative
        text-align          : center
        padding             : 15px
        
        @media(max-width : 991px)
            padding         : 0px 

    &__image
        position            : relative

        img
            display         : inline-block

        .showcase__link
            padding-bottom: 30px

    &__name
        min-height              : 45px
        margin-bottom       : 7px
        text-align          : left 
        line-height         : 14px
        overflow            : hidden
        margin-top          : 10px
        display             : flex
        align-items         : center

    &__short-description
        font-size: 11px
        color: #8B8A8A
        line-height: 13px
        overflow hidden
        height 40px
        margin-top: 11px
        margin-bottom: 7px
        
        @media(max-width : 991px)
            height 26px
            margin: 9px 0

    &__link
        display             : block

        &--name 
            letter-spacing  : 0.2px
            color           : color[1]
            font-size       : 15px
            font-weight     : 700 
            line-height     : 14px
            transition      : all 150ms ease-in-out 

            &:hover
                text-decoration: none 
                color: color[0]


    &__description
        height              : 52px
        margin-bottom       : 10px
        font-size           : 11px
        font-weight         : regular
        line-height         : 12px
        color               : #A8A8A8
        overflow            : hidden

    &__out
        padding             : 5px 15px
        font-size           : 14px
        font-weight         : bold
        text-transform      : uppercase
        background          : color[0] 
        display             : block
        text-align          : center
        color               : #fff

    &__container, [id*=ResultItems_]
        > div > ul:not(.slick-dotted):not(.slick-initialized)
            display                 : flex 
            flex-flow               : row wrap
            
            > li
                flex: 0 1 25%
                min-width: 0
                @media(max-width: 1100px)
                    flex: 0 1 33%
                @media(max-width: 991px)
                    min-width: 160px
                @media(max-width: 767px)
                    margin-bottom: 30px
                @media(max-width: 700px)
                    flex: 0 1 50%
                @media(max-width: 450px)
                    flex: 1 1 45.177%
                    padding: 0 5px
                    min-width: 135px

                &.helperComplement
                    order: 2
                    display: none

        &[data-carousel]
            > div > ul:not(.slick-dotted)
                // flex-wrap       : nowrap
                width           : 100%
                @media(max-width : 991px)
                    overflow        : auto
                    flex-wrap       : nowrap
                > li
                    min-width       : 160px
                    margin-right    : 30px
                    margin-bottom   : 20px

                    &.helperComplement
                        display : none


    &__prices
        height                  : 63px
        overflow                : hidden
        .price
            &.valor-de, &.valor-por
                flex            : 0 0 auto
                padding         : 0 5px
    &__actions 
        position                : relative
        display                 : flex 
        // padding-top             : 65px 
        margin-top              : 9px
        
    &__buy 
        flex                    : 1 1 auto 
        min-width               : 0
    .buy-button
        width                   : 100% 
        &__qtd 
            display             : none 
        &__button 
            display             : flex 
            justify-content     : center 
            align-items         : center  
            width               : 100% 
            height              : 40px
            padding             : 0 10px
            border              : 1px solid transparent
            border-radius       : 5px
            font-size           : 12px
            font-weight         : 500
            text-transform      : uppercase
            background          : #00954c
            color               : #fff
            cursor              : pointer
            transition          : all .3s
            &:disabled 
                background      : #eaeaea
            &:not(:disabled):hover
                background      : #ffffff
                color           : #00954c
                border-color    : #00954c
        &__variants 
            position            : absolute
            top                 : 0 
            left                : 0 
            width               : 100%
            display             : none
            .slick-list
                padding         : 0 
                margin          : 0
            .slick-slider[dir]
                margin          : 0 50px
            .slick-next
                top : 0 !important
        &__variant 
            border-radius       : 3px 
            overflow            : hidden
            text-align          : center 
            padding             : 1px 
            cursor              : pointer
            img 
                display         : inline-block
            &--actived 
                box-shadow      : inset 0 0 0 1px #FF7000
    &__quickview 
        order                   : -1
        display                 : none 
        a 
            display             : flex
            justify-content     : center
            align-items         : center
            padding             : 0 10px
            height              : 30px
            border              : 0
            font-size           : 12px
            font-weight         : 500
            text-transform      : uppercase
            background          : #ffffff
            color               : color[1]
            border              : 1px solid color[0]
            border-radius       : 5px
            transition          : all .3s
            white-space         : nowrap 
            &:hover 
                text-decoration: none 
                background: color[0]
                color: #fff 

@media (max-width: 991px)
    .showcase__buy
        margin-left: 0
        
@media (min-width: 992px)
    [data-carousel]:hover 
        z-index                 : 10
    .showcase
        &__quickview
            display                 : block
        &__item:hover
            position                : relative
            z-index                 : 50
            background              : #fff

        &__actions 
            opacity                 : 0 
            visibility              : hidden 
            transition              : all .2s ease-in-out  
    
        &__item
            &:hover
                box-shadow: 0 0 10px 0 rgba(0,0,0,0.15)
                border-radius: 7px

                .showcase__actions 
                    opacity         : 1 
                    visibility      : visible

.showcase-tabs
    padding-top: 60px
    &__container
        { container }
        display: flex
        align-items: flex-start
        justify-content: space-between
        flex-wrap: wrap
    &__title
        font-size: 35px
        color: color[1]
        font-weight: 300
        line-height: 42px
        flex: 0 0 100%
        margin-bottom: 20px
        @media(max-width : 767px)
            font-size: 30px
            line-height: 36px
            text-align center
    &__tabs
        flex: 0 1 17.675%
        @media(max-width : 991px)
            flex: 0 1 100%
            display: flex
            align-items: center
            justify-content: space-between
            padding-bottom: 20px
            margin-bottom: 20px
            overflow: auto
        &-item
            font-size: 20px
            color: #8B8A8A
            line-height: 24px
            background: #F7F7F7
            border-radius: 5px
            margin: 1px 0
            text-align: center
            padding: 18px 0
            cursor pointer
            border: 1px solid transparent
            transition: all .3s
            @media(max-width : 991px)
                min-width: 125px
                margin-right: 7px
                padding: 6px 0
            &--active, &:hover
                color: color[0]
                font-weight: 500
                background: #ffffff
                border: 1px solid #D4D4D4
    &__showcase
        width: 78.295%
        position relative
        overflow: auto
        @media(max-width : 991px)
            width: 100%
    .showcase
        position absolute
        top: 0
        left 0
        z-index: -1
        opacity 0
        visibility: hidden
        padding: 0
        max-width: 100%
        &--active
            z-index: 1
            opacity 1
            visibility: visible
            position static
        .showcase__item
            min-width: 160px
            @media(min-width : 992px)
                min-width: 228px
        .showcase__title
            display: none
        h2 + ul
            display: flex!important
            align-items: flex-start!important
            justify-content: space-between!important
            flex-wrap: nowrap!important
            max-width: 100%!important
            margin: 0
            > li
                @media(min-width: 992px)
                    padding: 5px
                @media(max-width: 991px)
                    margin-right: 30px
                @media(min-width : 992px)
                    min-width: 228px!important


.offer-day
    background-color: #fff
    padding: 50px 0
    @media(max-width : 991px)
        padding-bottom: 21px
        padding-top: 25px
    .labels--collection
        display none!important
    &__container
        { container }
        display: flex
        align-items: flex-start
        justify-content: space-between
        
        >div
            width: 100%
    h2
        font-size: 35px
        color: #453F3F
        font-weight: 300
        line-height: 42px
        margin-bottom: 11px
        @media(max-width : 767px)
            font-size: 30px
            line-height: 36px
            text-align: center
        + ul
            display: flex
            align-items: flex-start
            justify-content: space-between
            width: 100%
            overflow: auto
            >li
                background: #FBFBFB
                border: 1px solid #EAEAEA
                border-radius: 7px
                flex: 0 1 48.838%
                min-width: 275px
                margin-right: 5px
                margin-bottom: 15px

    .showcase__main
        flex: 0 1 50%
    .showcase__link
        padding: 0
    .showcase__item  
        display: flex
        align-items: flex-start
        justify-content: space-between
        &:hover
            background: #fbfbfb
        @media(max-width : 991px)
            display: block
            padding: 15px
        @media(max-width : 539px)
            background: #FBFBFB
            border: 1px solid #EAEAEA
            border-radius: 7px

    .slick-dots
        margin: 0
        margin-top: 13px
        button
            background: #ffffff
        .slick-active
            button
                background: color[0]

    .showcase__link--name
        font-size: 25px
        color: #453F3F
        line-height: 26px
        @media(max-width : 1199px)
            font-size: 15px
            line-height: 18px
        @media(max-width : 991px)
            font-size: 20px
            line-height: 26px
    .showcase__name
        height 52px
    .showcase__image
        margin-right: 10px
        @media(max-width : 991px)
            margin: 0
    .buy-button__button
        background: #00954c
        color: #FFFFFF
        font-size: 14px
        line-height: 40px
        font-weight: 600
        letter-spacing: 1.48px
        text-transform: uppercase
        padding: 0 60px
        border: 1px solid transparent
        border-radius: 5px
        transition: all .3s
        cursor: pointer
        &:hover
            background: #FFFFFF 
            color:#00954c
            border-color: #00954c 
    .showcase__short-description
        height 26px
    .showcase__prices > .price
        display: flex
        align-items: center
        justify-content: space-between
        flex-wrap: wrap
        @media(max-width : 1199px)
            display: block
        .valor-de
            flex: 1 1 100%
    .showcase__prices
        height 47px
        @media(max-width : 1199px)
            height: 65px
    .showcase__actions
        opacity 1
        visibility visible
        margin: 0
        *
            display: none
        .showcase__buy
            display: block
            margin: 0
            .buy-button__button, .buy-button
                display: block